package WarDrummerRegister

import RegisterEvents
import SummonWarDrummer
import InstantDummyCaster
import Orders


init
    registerPlayerUnitEvent(EVENT_PLAYER_UNIT_SPELL_CAST) ->
        let sid = GetSpellAbilityId()
        let p = GetTriggerPlayer()
        let u = GetSpellTargetUnit()
        if sid == SUMMON_WAR_DRUMMER_ID
            InstantDummyCaster.castImmediate(p, SUMMON_WAR_DRUMMER_DUMMY_ID, 1, OrderIds.waterelemental, u.getPos())
