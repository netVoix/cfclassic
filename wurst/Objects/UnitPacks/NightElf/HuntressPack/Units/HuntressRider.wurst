package HuntressRider

import BaseCFUnit
import HuntressConstants
import UnitIds
import Icons
import Units

@compiletime function huntressRaider()
    new BaseCFUnit(HUNTRESS_RIDER_ID, UnitIds.huntress)
    ..setNormalAbilities("A00U")
    ..setIconGameInterface(Icons.bTNHuntress)
    ..setTotalCost(HUNTRESS_RIDER_HALL_TOTAL_COST)
    ..setGoldBountyReward(13)
    ..setCollisionSize(16.0)
    ..setAttack1CooldownTime(1.1)
    ..setButtonPositionX(0)
    ..setRequirements("")
    ..setDefenseBase(7)
    ..setArmorType(ArmorType.Unarmored)
    ..setAttack1DamageBase(77)
    ..setAttack1DamageSidesperDie(27)
    ..setModelFile(Units.huntress)
    ..setHitPointsMaximumBase(775)
    ..setHitPointsRegenerationRate(2.7)
    ..setAttack1AttackType(AttackType.Normal)
    ..setAttack1WeaponType(WeaponType.MissileBounce)
    ..setAttack1DamageLossFactor(0.34)
    ..setAttack1TargetsAllowed("debris,ground,item,structure,ward")
    ..setAttack1ProjectileSpeed(800)
    ..setFullName("Huntress Raider")
    ..setPointValue(217)
    ..setAttack1Range(300)
    ..setSpeedBase(300)
    ..setTooltipExtended(HUNTRESS_RIDER_FULL_DESCRIPTION)
  